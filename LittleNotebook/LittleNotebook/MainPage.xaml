<Page
    x:Class="LittleNotebook.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LittleNotebook"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="60">
            <TextBox Header="Enter your E-mail address"
                PlaceholderText="email@email.com" Margin="50 10 50 10"/>
            <TextBox Header="Enter your password"
                PlaceholderText="Password" InputScope="Password" Margin="50 10 50 10"/>
            <Button Content="Click Here to go to next page" HorizontalAlignment="Center"
                    Margin="20" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
